# Dual RAG LLM System Configuration
# Copy this file to .env and customize as needed

# Web UI Secret Key (change this!)
WEBUI_SECRET_KEY=your-secret-key-here-change-this

# Ollama Configuration
OLLAMA_HOST=0.0.0.0
OLLAMA_API=http://ollama:11434

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_CACHE_TTL=86400  # 24 hours in seconds
REDIS_MAX_MEMORY=2gb

# API Keys for External Services
# Get Brave API key: https://brave.com/search/api/
BRAVE_API_KEY=your-brave-api-key-here

# Get GitHub token: https://github.com/settings/tokens
# Scopes needed: repo (for private repos), public_repo (for public)
GITHUB_TOKEN=your-github-token-here

# Feature Toggles
ENABLE_WEB_SEARCH=true
ENABLE_GITHUB=true
ENABLE_CACHING=true

# Logging
LOG_LEVEL=INFO

# Model Configuration
MS_MODEL=qwen2.5-coder:32b-q4_K_M
OSS_MODEL=deepseek-coder-v2:33b-q4_K_M

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# RAG Configuration
SIMILARITY_TOP_K=3
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Web Search Configuration
WEB_SEARCH_MAX_RESULTS=5
WEB_SEARCH_TIMEOUT=10

# GitHub Configuration
GITHUB_MAX_RESULTS=10
GITHUB_DEFAULT_BRANCH=main

# Resource Limits (uncomment to customize)
# OLLAMA_MAX_MEMORY=16g
# RAG_MAX_MEMORY=8g

