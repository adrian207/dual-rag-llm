# Dual RAG LLM System Configuration
# Copy this file to .env and customize as needed

# Web UI Secret Key (change this!)
WEBUI_SECRET_KEY=your-secret-key-here-change-this

# Ollama Configuration
OLLAMA_HOST=0.0.0.0
OLLAMA_API=http://ollama:11434

# Logging
LOG_LEVEL=INFO

# Model Configuration
MS_MODEL=qwen2.5-coder:32b-q4_K_M
OSS_MODEL=deepseek-coder-v2:33b-q4_K_M

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# RAG Configuration
SIMILARITY_TOP_K=3
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Resource Limits (uncomment to customize)
# OLLAMA_MAX_MEMORY=16g
# RAG_MAX_MEMORY=8g

