# Test Environment Dockerfile
# Optimized for running comprehensive test suite
# Author: Adrian Johnson <adrian207@gmail.com>

FROM python:3.11-slim

LABEL maintainer="Adrian Johnson <adrian207@gmail.com>"
LABEL description="Dual RAG LLM Test Environment"
LABEL version="1.21.0"

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    make \
    postgresql-client \
    redis-tools \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements files
COPY rag/requirements.txt /app/rag/requirements.txt
COPY requirements-test.txt /app/requirements-test.txt

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r rag/requirements.txt && \
    pip install --no-cache-dir -r requirements-test.txt

# Copy application code
COPY . /app/

# Set Python path
ENV PYTHONPATH=/app

# Create coverage directory
RUN mkdir -p /app/htmlcov

# Default command (can be overridden)
CMD ["pytest", "tests/", "-v", "--cov=rag", "--cov-report=html", "--cov-report=term-missing"]

